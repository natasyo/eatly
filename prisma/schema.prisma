generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id         String   @id @default(uuid())
  name       String
  type       Type     @relation(fields: [typeId], references: [id], onDelete: SetDefault, onUpdate: Cascade)
  typeId     String
  timeWait   Int
  rating     Float
  image      String
  price      Float
  category   Category @relation(fields: [categoryId], references: [id], onDelete: SetDefault, onUpdate: Cascade)
  categoryId String
}

model Type {
  id       String    @id @default(uuid())
  title    String
  bgColor  String
  products Product[]
}

model Category {
  id         String    @id @default(uuid())
  image      String
  title      String
  colorBg    String
  colorTitle String
  products   Product[]
}
