generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id       String @id
  name     String
  type     Type   @relation(fields: [typeId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  typeId   String
  timeWait Int
  rating   Float
  image    String
  price    Float
}

model Type {
  id       String    @id
  title    String
  bgColor  String
  products Product[]
}

model Category {
  id         String @id
  image      String
  title      String
  colorBg    String
  colorTitle String
}
